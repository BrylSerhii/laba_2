<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="Tariffs" type="TariffsType"/>

    <xs:complexType name="TariffsType">
        <xs:sequence>
            <xs:element name="Tariff" type="TariffType" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="TariffType">
        <xs:sequence>
            <xs:element name="Name" type="xs:string"/>
            <xs:element name="OperatorName" type="xs:string"/>
            <xs:element name="Payroll" type="PayrollType"/>
            <xs:element name="CallPrices" type="CallPricesType"/>
            <xs:element name="SMSPrice" type="PayrollType"/>
            <xs:element name="Parameters" type="ParametersType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="PayrollType">
        <xs:simpleContent>
            <xs:extension base="xs:decimal">
                <xs:attribute name="currency" type="xs:string" use="optional" fixed="UAH"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="CallPricesType">
        <xs:sequence>
            <xs:element name="InsideNetwork" type="PayrollType" minOccurs="0"/>
            <xs:element name="OutsideNetwork" type="PayrollType" minOccurs="0"/>
            <xs:element name="Landline" type="PayrollType" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ParametersType">
        <xs:sequence>
            <xs:element name="FavoriteNumber" type="xs:integer" minOccurs="0"/>
            <xs:element name="Tariffing" type="TariffingType"/>
            <xs:element name="ConnectionFee" type="PayrollType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:simpleType name="TariffingType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="12-second"/>
            <xs:enumeration value="per-minute"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
